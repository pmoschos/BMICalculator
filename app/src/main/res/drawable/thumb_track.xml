<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state (ON) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#EDEBFF"/>
            <corners android:radius="50dp"/>
            <size android:height="24dp" android:width="500dp"/> <!-- Adjusted to increase the width of the track -->
        </shape>
    </item>

    <!-- Unchecked state (OFF) -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#EDEBFF"/>
            <corners android:radius="50dp"/>
            <size android:height="24dp" android:width="500dp"/> <!-- Ensure width is large enough -->
        </shape>
    </item>
</selector>




